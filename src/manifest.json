{
  "manifest_version": 2,
  "name": "refined-azure",
  "author": "Darcy Clarke <darcy@darcyclarke.me>",
  "description": "A custom theme to the portal.azure.com site",
  "version": "1.0.0",
  "homepage_url": "https://github.com/darcyclarke/refined-azure",
  "incognito": "spanning",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://portal.azure.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "theme.js"
      ],
      "css": [
        "theme.css"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
